# We are testing shit
#out_to_x no
#out_to_console yes

#avoid flicker
double_buffer yes
#own window to run simultaneous 2 or more conky instances
own_window yes
own_window_transparent no
own_window_type override
own_window_hints undecorate,sticky,skip_taskbar,skip_pager

#borders
draw_borders no

#shades
draw_shades no

#override_utf8_locale yes

#position
#gap_x 370
gap_y 6
alignment top_middle


#behaviour
update_interval 1

#colour
default_color  8f8f8f
default_shade_color 000000
own_window_colour 262626

#font
use_xft yes
xftfont Droid Sans:pixelsize=9

#to prevent window from moving
use_spacer no 
#minimum_width 1920 0
#maximum_width 1366 0

#mpd
mpd_host localhost
mpd_port 6600

TEXT
${alignc}Kernel: ${color e0e0e0}$kernel   |   ${time %d %B} ${color e0e0e0}${time  %I:%M %P}  |  ${color} Up: ${color e0e0e0}${uptime_short}   |   ${color}Processes: ${color e0e0e0}$processes  ${color}Running: ${color e0e0e0}$running_processes   |  ${color}Cpu: ${color e0e0e0}${cpu}%   ${color}${cpugraph 6,80} ${color e0e0e0}    |   ${color }Mem: ${color e0e0e0}$mem/$memmax - $memperc% ${color} ${membar 6,80}${color e0e0e0}    |   ${color }Net: ${if_existing /sys/class/net/wlp3s0/operstate up}${color e0e0e0}${font}${downspeed wlp3s0} ${color}  ${downspeedgraph wlp3s0 6,80}  ${color} ${totaldown wlp3s0} down   |   ${color e0e0e0}${upspeed wlp3s0} ${color} ${upspeedgraph wlp3s0 6,80}  ${color}${totalup wlp3s0} up${endif}${if_existing /sys/class/net/enp2s0/operstate up}${color e0e0e0}${font}${downspeed enp2s0} ${color}  ${downspeedgraph enp2s0 6,80}  ${color} ${totaldown enp2s0} down   |   ${color e0e0e0}${upspeed enp2s0} ${color} ${upspeedgraph enp2s0 6,80}  ${color}${totalup enp2s0} up${endif}
${alignc} ${color }Root: ${color e0e0e0}${font}${fs_used /}  / ${fs_size /} - ${fs_used_perc /}%   |  ${color} Home: ${color e0e0e0}${fs_used /home}  / ${fs_size /home}  - ${fs_used_perc /home}%   | ${color} Arch-pkg: ${color e0e0e0}${font}${execi 120 yaourt -Qua | wc -l} to update  |  ${color}Now playing:  ${color e0e0e0}${font Droid Sans Fallback:size=7}${mpd_artist}-${mpd_title}
