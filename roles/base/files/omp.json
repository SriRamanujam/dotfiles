{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#b15646",
          "template": "{{ if .Root }}{{ .UserName }}{{ end }}{{ if .SSHSession }}@{{ .HostName }}{{ end }}"
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#eceb98",
          "template": "{{ if .SSHSession }}@{{ .HostName }} {{ end }}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#729fcf",
          "template": "{{ .Path }} ",
          "foreground_templates": [
            "{{ if .Writable }}#729fcf{{ end }}",
            "{{ if not .Writable }}#a40000{{ end }}"
          ],
          "options": {
            "style": "full"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#b67ac9",
          "template": "{{ if .Env.TOOLBOX_CONTAINER_NAME }}󱋩 {{ .Env.TOOLBOX_CONTAINER_NAME }}{{ end }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "template": " {{ if not .Segments.Jujutsu }}{{ .Ref }} {{ .Working.String }} {{ .Upstream }} {{ substr 0 7 .Commit.Sha }}{{ end }}",
          "foreground": "yellow",
          "options": {
            "fetch_status": true
          }
        },
        {
          "type": "jujutsu",
          "style": "plain",
          "foreground": "yellow",
          "options": {
            "fetch_status": true
          },
          "template": "@{{.ChangeID}}{{if .Working.Changed}} {{ .Working.String }}{{ end }} {{ .ClosestBookmarks }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "python",
          "style": "plain",
          "foreground": "green",
          "template": "{{ if .Error }} \ue235 {{ .Error }}{{ else }}{{ if .Venv }} \ue235 {{ .Venv }}{{ end }}{{ end }}",
          "options": {
            "display_mode": "context",
            "fetch_version": false
          }
        },
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#326ce5",
          "template": " 󱃾 {{ .Context }}",
          "include_folders": [
            "~/Documents/Projects/.*"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#A3BE8C",
          "template": " {{ .FormattedMs }}",
          "options": {
            "style": "austin"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "cyan",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#BF616A{{ end }}"
          ],
          "template": "❯ ",
          "options": {
            "always_enabled": true
          }
        }
      ],
      "newline": true
    }
  ]
}
